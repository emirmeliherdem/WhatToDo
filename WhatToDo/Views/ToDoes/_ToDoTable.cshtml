@model IEnumerable<WhatToDo.Models.ToDo>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!item.IsDone)
                {
                    @Html.DisplayFor(modelItem => item.Description)
                }
                else
                {
                    <div class="DoneToDo">@Html.DisplayFor(modelItem => item.Description)</div>
                }
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.IsDone, new { id = item.Id, @class = "ActiveCheck" })
            </td>
            <td>
                @using (Ajax.BeginForm("AJAXDelete", "ToDoes",
                    new AjaxOptions
                    {
                        InsertionMode = InsertionMode.Replace,
                        HttpMethod = "POST",
                        UpdateTargetId = "toDoTableDiv",
                    }))
                {
                    <button id='deleteRecord' data-model-id="@item.Id"></button>
                    <input type="submit" value="AJAXDelete" class="btn btn-default" />
                    <a class="delete" data-model-id="@item.Id" onclick="Delete(this)">.........</a>
                }
                @Html.ActionLink("X", "AJAXDelete", new { id = item.Id, @class = "ActiveDelete" })
                </td>
        </tr>
    }

</table>

<script src="~/Custom_Scripts/AddCheckBoxListener.js"></script>
